<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background ="@drawable/newgamebakgrund"
  >
  
  <TextView 
  android:layout_height="wrap_content" 
  android:layout_width="fill_parent" 
  android:textSize="20dp" 
  android:id="@+id/tvEnterN" 
  android:text="Enter name:"/>
  
  <EditText 
  android:layout_height="wrap_content" 
  android:layout_width="fill_parent" 
  android:id="@+id/etName" 
  android:text=""/>
 
 
  <TextView android:layout_height="wrap_content" 
  			android:layout_width="wrap_content" 
  			android:textSize="20dp" 
  			android:id="@+id/tvColor" 
  			android:text="Select race:"/>
  
  <RadioGroup android:layout_height="wrap_content" 
  		      android:layout_width="fill_parent" 
  		      android:orientation="horizontal" 
  		      android:id="@+id/rgRace">
  		      
	<RadioButton android:layout_height="wrap_content" 
				 android:layout_width="wrap_content" 
				 android:id="@+id/rbFluffy" 
				 android:text="Fluffy" 
				 android:layout_gravity="center" 
				 android:layout_weight="33"/>
				 
	<RadioButton android:layout_height="wrap_content" 
				 android:layout_width="wrap_content" 
				 android:id="@+id/rbRed" 
				 android:text="Red" 
				 android:layout_gravity="center" 
				 android:layout_weight="33"/>
				 
	<RadioButton android:layout_height="wrap_content" 
				 android:layout_width="wrap_content" 
				 android:id="@+id/rbYellow" 
				 android:text="Yellow" 
				 android:layout_gravity="center" 
				 android:layout_weight="33"/>
  </RadioGroup>
  
  <ImageView android:layout_height="wrap_content" 
  			 android:layout_width="fill_parent" 
  			 android:id="@+id/ivSelectChar" android:clickable="true"/>
  			 
  <TableRow android:layout_height="wrap_content" 
  			android:layout_width="fill_parent" 
  			android:id="@+id/tableRow1">
  			
  	<Button android:layout_height="fill_parent" 
  			android:layout_width="fill_parent" 
  			android:id="@+id/bCancel" 
  			android:text="Cancel" 
  			android:layout_weight="50"/>
  			
	<Button android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:id="@+id/bCreate" 
			android:text="Create" 
			android:layout_weight="50"/>
  </TableRow>
  <TextView android:id="@+id/tvErrorMsg" android:textAppearance="?android:attr/textAppearanceMedium" android:text="" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:textSize="15dp"></TextView>
</LinearLayout>
